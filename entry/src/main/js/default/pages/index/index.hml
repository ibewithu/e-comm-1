    <toolbar style="position: fixed; bottom: 0%;">

        <toolbar-item value="Home" icon="/common/images/img_7.png"></toolbar-item>
        <toolbar-item value="Categories" icon="/common/images/img_8.png"></toolbar-item>
        <toolbar-item value="Notifications" icon="/common/images/img_9.png"></toolbar-item>
        <toolbar-item value="My cart" icon="/common/images/img_10.png"></toolbar-item>

    </toolbar>

</div>